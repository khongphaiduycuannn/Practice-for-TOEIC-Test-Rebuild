<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_day_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_day"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="6dp"
        android:background="@drawable/shape_circle_lavender"
        android:gravity="center"
        android:padding="2dp"
        android:text="1"
        android:textColor="#4D4A4B"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_count_question"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/shape_circle_green"
        android:gravity="center"
        android:text="1"
        android:alpha="0"
        android:textColor="#F9FAF7"
        android:textSize="10sp" />
</FrameLayout>